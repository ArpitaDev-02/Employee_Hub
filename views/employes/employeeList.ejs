<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Employees</h3>
    <table class="table table-secondry table-hover">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">image</th>
                <th scope="col">name</th>
                <th scope="col">email</th>
                <th scope="col">designation</th>
                <th scope="col">mobile</th>
                <th scope="col">gender</th>
                <th scope="col">course</th>
                <th scope="col">create At</th>
                <th scope="col">Action</th>
                </tr>
        </thead>
        <tbody>
        <% for(let employe of allEmployees) {%>

                <tr>
                    <td><%= employe.id %></td>
                    <td><img src="<%= employe.image %>" class="profile-img"></td>
                    <td><%= employe.name %></td>
                    <td><%= employe.email %></td>
                    <td><%= employe.designation %></td>
                    <td><%= employe.mobile %></td>
                    <td><%= employe.gender %></td>
                    <td><%= employe.course %></td>
                    <td><%= new Date(employe.createDate).toLocaleDateString() %></td>
                    <td><a href="/employeeHub/employeeList/<%= employe.id %>/edit">Edit</a>-<a href="/employeeHub/employeeList/<%= employe.id %>/delete">Delete</a></td>
                    </tr>
            </tbody>
       
        <%  } %>
    </table>
         
</body>